<%= render 'shared/header' %>

  <div class="main-top">
    <h1 class="title">ログイン</h1>
  </div>

<%= form_with model: @user, url: user_session_path, local: true do |f| %>

  <div class="user_form_wrap">
    <div class="user_form">
      <div class="user_form_content">
        <p class="user_form_label">メールアドレス</p>
        <%= f.email_field :email, class: "form form_normal", autofocus: true %>
      </div>

      <div class="user_form_content">
        <p class="user_form_label">パスワード</p>
        <%= f.password_field :password, class: "form form_normal", autocomplete: "new-password" %>
      </div>
    </div>

    <div class="user_submit_wrap">
      <%= f.submit "ログイン", class: "user_submit_btn" %>
    </div>
  </div>
<% end %>
