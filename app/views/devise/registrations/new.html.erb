<%= render 'shared/header' %>

  <div class="main-top">
    <h1 class="title">新規登録</h1>
  </div>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>

  <div class="user_form_wrap">
    <div class="user_form">
      <div class="user_form_content">
        <p class="user_form_label">名前</p>
        <%= f.text_field :name, class: "form form_normal", autofocus: true %>
      </div>

      <div class="user_form_content">
        <p class="user_form_label">メールアドレス</p>
        <%= f.email_field :email, class: "form form_normal" %>
      </div>

      <div class="user_form_content">
        <p class="user_form_label">パスワード</p>
        <%= f.password_field :password, class: "form form_normal", autocomplete: "new-password" %>
      </div>

      <div class="user_form_content">
        <p class="user_form_label">パスワード（確認用）</p>
        <%= f.password_field :password_confirmation, class: "form form_normal", autocomplete: "new-password" %>
      </div>
  </div>

  <div class="user_submit_wrap">
    <%= f.submit "登録", class: "user_submit_btn" %>
  </div>
<% end %>
