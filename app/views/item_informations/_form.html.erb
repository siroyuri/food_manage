      <div class="error_under"><%# 幅合わせ %></div>
    </div>
  </div>

  <div id="js_<%= category.id %>">
    <%= link_to "＋別の食材を追加", "#", class: "new_form_add", id: "js_add_informations_form" %>
  </div>
</div>
