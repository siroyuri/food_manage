      <% end %>

      <div class="form_box_delete"><%# 幅合わせ %></div>
    </div>

    <div class="er_message_box" id="error_message_box">
      <div class="error_top"><%# 幅合わせ %></div>
      <p class="error_name" id="error_name"></p>
      <p class="error_quantity" id="error_quantity"></p>
      <p class="error_unit" id="error_unit"></p>
