          <%= ff.check_box :is_frozen, { class: "ipf_checkbox", id: "check_box" }, "true", "false" %>
          <%= image_tag("/frozen.png", class:"icon_img grayscale", id:"frozen_img") %>
        </label>
        <%= ff.text_field :name, maxlength: "10", class: "form form_normal ipf_name", id: "name" %>
