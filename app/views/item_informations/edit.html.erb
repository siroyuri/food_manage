<%= form_with model: @info, local: true do |f| %>
  <%= f.hidden_field :category_id, value: @item.category_id %>

  <%= f.check_box :is_frozen, {}, "true", "false" %>
  <%= f.text_field :name, placeholder: "名前(20文字以内)", maxlength: "20", value: @item.name %>
  <%= f.number_field :quantity, step: "0.5", placeholder: "数量(0.5単位)" %>
  <%= f.text_field :unit, placeholder: "単位", value: @item.unit %>
  <%= f.label :deadline %>
  <%= f.date_field(:deadline, {}) %>
  <%= f.label :purchase_date %>
  <%= f.date_field(:purchase_date, {value: Time.now.strftime("%Y-%m-%d")}) %>

  <%= f.submit '送信' %>
<% end %>